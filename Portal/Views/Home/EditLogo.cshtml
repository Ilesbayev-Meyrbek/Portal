@model Portal.Models.Logo

@{
    ViewBag.Title = "Редактирование логотипа";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="EditLogo" asp-controller="Home" asp-route-id="@Model.ID" method="post" enctype="multipart/form-data">

    @*<div class="bodyContent" style="height: 100%">*@

        @Html.Raw(TempData["msg"])

        @Html.HiddenFor(model => model.ID)

        @Html.HiddenFor(model => model.MarketID)
        @Html.HiddenFor(model => model.BMP)

        <div class="form-group">
            <div class="row">
                <div class="col-lg-6 col-md-6" style="width: 50%">
                    <div class="form-group">
                        @Html.LabelFor(model => model.DateS, "Дата начала", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.DateS, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DateS, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DateE, "Дата завершения", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.DateE, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DateE, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="editor-field col-md-10">
                            <input name="BMP" type="file" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Note, "Заметки", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 col-md-6" style="width: 50%; ">
                    <div class="right-panel">
                        <div style="border: 1px solid; border-color: black; width: 503px; padding: 3px; text-align:center">
                            @Html.Raw("<img id='viewImg' name='viewImg' style='width:300px; height:200px;' src=\"data:image/bmp;base64," + Convert.ToBase64String(Model.BMP) + "\" />")
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-actions no-color">
            <p>
                <div class="btnPosition">
                    <input type="submit" value="Сохранить" class="my_btn my_btn_success" />
                </div>

                <div class="btnPositionCancel">
                    @Html.ActionLink("Отмена","Logos","Home",null, new { @class="my_btn my_btn_danger"})
                </div>
            </p>
        </div>

@*    </div>*@

</form>